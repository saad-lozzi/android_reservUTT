<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ReservationsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Reservations" />
    <RelativeLayout
        android:id="@+id/layout_user_information2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2f538a"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_account_circle_black_24dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_user_name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_member_type2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/logoutBtn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/buttonshape"
            android:clickable="true"
            android:fontFamily="@font/roboto_light"
            android:text="LogOff"
            android:textColor="#000000"
            android:textSize="8sp" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" />

</FrameLayout>